{
  "compilerOptions": {
    "target": "ES2017",                          // Specify ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"],   // Specify library files to be included
    "allowJs": true,                             // Allow JavaScript files to be compiled
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "strict": true,                              // Enable all strict type-checking options
    "noEmit": true,                              // Do not emit output
    "esModuleInterop": true,                     // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext",                          // Specify module code generation
    "moduleResolution": "bundler",               // Specify module resolution strategy
    "resolveJsonModule": true,                   // Include modules imported with .json extension
    "isolatedModules": true,                     // Ensure that each file can be safely transpiled independently
    "jsx": "preserve",                           // Specify JSX code generation
    "incremental": true,                         // Enable incremental compilation
    "forceConsistentCasingInFileNames": true,   // Disallow inconsistently-cased references to the same file
    "baseUrl": "./src",                         // Base directory to resolve non-relative module names
    "paths": {
      "@/*": ["./*"]                            // Path mapping for module resolution
    },
    "plugins": [
      {
        "name": "next"                           // Plugin for Next.js
      }
    ]
  },
  "include": [
    "next-env.d.ts",                             // Include Next.js environment types
    "**/*.ts",                                   // Include all TypeScript files
    "**/*.tsx",                                  // Include all TypeScript JSX files
    ".next/types/**/*.ts"                        // Include Next.js types
  ],
  "exclude": ["node_modules"]                    // Exclude node_modules from compilation
}
